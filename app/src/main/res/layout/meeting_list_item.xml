<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">


    <TextView
        android:text="Naprawa pieca Gazowego"
        android:id="@+id/meeting_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="Gazownia"
        android:layout_below="@id/meeting_reason"/>

    <TextView
        android:text="ul. Okopowa 15, 01-111 Warszawa"
        android:id="@+id/client_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meeting_reason"
        android:layout_toEndOf="@id/client_name"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:text="NajbliÅ¼szy termin: 1.05.2016 16:00"
        android:id="@+id/closest_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/client_name"
        />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="..."
        android:textColor="@color/colorAccent"/>
</RelativeLayout>